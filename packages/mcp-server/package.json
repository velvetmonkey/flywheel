{
  "name": "@velvetmonkey/flywheel-mcp",
  "version": "1.27.28",
  "description": "Graph intelligence for markdown vaults. MCP server for Obsidian.",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "flywheel-mcp": "dist/index.js"
  },
  "scripts": {
    "build": "npx esbuild src/index.ts --bundle --platform=node --format=esm --outfile=dist/index.js --packages=external",
    "postbuild": "node -e \"require('fs').chmodSync('dist/index.js', 0o755)\"",
    "dev": "npx tsx src/index.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:watcher": "vitest run test/core/watch/",
    "test:watcher:stress": "vitest run test/stress/watcher*.test.ts",
    "test:watcher:chaos": "vitest run test/chaos/watcher*.test.ts",
    "test:platform": "vitest run test/platform/",
    "test:ci": "vitest run --reporter=github-actions",
    "inspect": "npx @modelcontextprotocol/inspector npx tsx src/index.ts",
    "prepublishOnly": "npm run build"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.1",
    "@velvetmonkey/vault-core": "^1.27.28",
    "better-sqlite3": "^11.0.0",
    "chokidar": "^4.0.0",
    "gray-matter": "^4.0.3",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.0",
    "@types/node": "^20.0.0",
    "@vitest/coverage-v8": "^2.0.0",
    "esbuild": "^0.24.0",
    "mcp-testing-kit": "^0.2.0",
    "tsx": "^4.19.0",
    "typescript": "^5.0.0",
    "vitest": "^2.0.0"
  },
  "keywords": [
    "mcp",
    "mcp-server",
    "obsidian",
    "knowledge-graph",
    "markdown",
    "claude",
    "pkm",
    "ai-agents",
    "semantic-search",
    "vault",
    "backlinks",
    "graph-database"
  ],
  "author": "Velvet Monkey",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/velvetmonkey/flywheel.git"
  },
  "bugs": {
    "url": "https://github.com/velvetmonkey/flywheel/issues"
  },
  "homepage": "https://github.com/velvetmonkey/flywheel#readme",
  "engines": {
    "node": ">=18"
  }
}
